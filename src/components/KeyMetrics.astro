---
const metrics = [
  { value: "91", label: "De adherencia al plan", symbol: "%" },
  { value: "16", label: "De los pacientes cumplen su tratamiento", symbol: "%" },
  { value: "51", label: "Menos hospitalizaciones", symbol: "%" },
];
---

<section class="bg-gray-100 py-16">
  <div class="container mx-auto px-4">
    <div
      class="flex flex-col md:flex-row justify-between items-center md:items-start space-y-12 md:space-y-0"
    >
      {
        metrics.map((metric) => (
          <div class="text-center md:w-1/3">
            <div class="flex items-baseline justify-center">
              <span class="text-7xl font-bold text-green-800">
                {metric.value}
              </span>
              <span class="text-5xl font-bold text-green-800 ml-1">
                {metric.symbol}
              </span>
            </div>
            <p class="mt-4 text-lg font-semibold text-gray-700 max-w-[200px] mx-auto">{metric.label}</p>
          </div>
        ))
      }
    </div>
  </div>
</section>
